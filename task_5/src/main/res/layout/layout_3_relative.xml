<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sing_in"
        style="@style/l_3_textView_Sing"
        android:layout_marginTop="60dp" />

    <EditText
        android:id="@+id/email"
        style="@style/l_3_editText"
        android:layout_below="@+id/sing_in" />

    <EditText
        android:id="@+id/password"
        style="@style/l_3_editText"
        android:layout_below="@+id/email"
        android:inputType="textPassword" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        style="@style/l_3_check"
        android:layout_below="@+id/password" />

    <TextView
        android:id="@+id/remember"
        style="@style/l_3_text"
        android:layout_below="@+id/password"
        android:layout_toEndOf="@+id/checkbox"
        android:text="@string/remember" />

    <TextView
        style="@style/l_3_text"
        android:layout_width="186dp"
        android:layout_below="@+id/password"
        android:layout_toEndOf="@+id/remember"
        android:text="@string/forgot_password" />

    <Button
        android:id="@+id/btn"
        style="@style/l_3_button"
        android:layout_below="@id/remember"
        android:layout_marginStart="45dp" />

    <TextView
        style="@style/l_3_justSignIn"
        android:layout_below="@+id/btn"
        android:layout_marginStart="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp" />

</RelativeLayout>